<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(object.errors.count, "issue") %>
        prohibiting you	<%= object.class.to_s.underscore.humanize.downcase %>
		from saving your account info:</h2>
    <p>There were problems with the following fields:</p>
    <ul>
    <% object.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>